{
  "exclude": "(^Resources/Public/Themes/Bootstrap/)i",
  "linters": {
    "JavaScript Linter": {
      "type": "jshint",
      "include": "(\\.js$)"
    },
    "Merge Conflict detection": {
      "type": "merge-conflict"
    },
    "PHP Codesniffer": {
      "type": "phpcs",
      "bin": "vendor/bin/phpcs",
      "flags": ["--standard=TYPO3CMS"],
      "include": "(\\.php$)",
      "severity": {
        "PHPCS.E.TYPO3SniffPool.Files.FileExtension.WrongFileExtension": "disabled"
      }
    },
    "English spelling": {
      "type": "spelling"
    },
    "Basic text linter for line length, encoding, trailing whitespace ...": {
      "type": "text",
      "exclude": "(^composer.lock$|.php$)"
    }
  }
}
